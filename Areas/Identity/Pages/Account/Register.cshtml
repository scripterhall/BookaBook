@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg" style="border-radius: 15px; border: none;">
                <div class="card-header p-4" style="background-color: #3D0240; border-radius: 15px 15px 0 0;">
                    <h2 class="text-center text-white mb-0">Create Account</h2>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FirstName" class="form-label" style="color: #3D0240;"></label>
                                <input asp-for="Input.FirstName" class="form-control rounded-pill"
                                       style="border-color: #3D0240; padding: 12px 20px;" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LastName" class="form-label" style="color: #3D0240;"></label>
                                <input asp-for="Input.LastName" class="form-control rounded-pill"
                                       style="border-color: #3D0240; padding: 12px 20px;" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label" style="color: #3D0240;"></label>
                            <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username"
                                   style="border-color: #3D0240; padding: 12px 20px;" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label" style="color: #3D0240;"></label>
                            <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="new-password"
                                   style="border-color: #3D0240; padding: 12px 20px;" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label" style="color: #3D0240;"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" autocomplete="new-password"
                                   style="border-color: #3D0240; padding: 12px 20px;" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button id="registerSubmit" type="submit" class="btn rounded-pill py-2 text-white"
                                    style="background-color: #3D0240; transition: all 0.3s ease;">
                                Create Account
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0" style="color: #6c757d;">
                                Already have an account?
                                <a asp-page="./Login" class="text-decoration-none" style="color: #3D0240;">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}